{
  "name": "sformula",
  "description": "Library for parsing / evaluating Salesforce formula in client-side JavaScript",
  "version": "4.6.0",
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stomita/sformula"
  },
  "scripts": {
    "clean": "rimraf dist/* lib/* module/* types/*",
    "build": "run-s build:parser build:src build:bundle",
    "build:parser": "pegjs -f es src/parser.pegjs",
    "build:src": "run-p build:lib build:module build:typedef",
    "build:lib": "BUILD_TARGET=lib babel --extensions '.js,.ts' --source-maps -d lib src",
    "build:module": "BUILD_TARGET=module babel --extensions '.js,.ts' --source-maps -d module src",
    "build:typedef": "tsc --project ./src/tsconfig.json --declaration --emitDeclarationOnly --outDir types --rootDir src",
    "build:bundle": "webpack",
    "lint": "eslint src test",
    "prettier": "prettier src test --write",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:skipRebuild": "SKIP_REBUILD_FORMULA_SCHEMA=true jest",
    "test:skipPrepare": "SKIP_LOADING_TEST_RECORDS=true jest"
  },
  "keywords": [
    "salesforce",
    "formula",
    "javascript",
    "parser",
    "eval"
  ],
  "files": [
    "dist",
    "lib",
    "module",
    "src",
    "types"
  ],
  "dependencies": {
    "@babel/runtime": "^7.20.6",
    "dayjs": "^1.11.3",
    "esformula": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.20.0",
    "@types/adm-zip": "^0.4.33",
    "@types/estraverse": "^5.1.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^3.12.5",
    "@types/luxon": "^1.25.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "adm-zip": "^0.4.16",
    "babel-preset-power-assert": "^3.0.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "estraverse": "^5.2.0",
    "fs-extra": "^9.0.1",
    "jest": "^27.0.5",
    "js-yaml": "^3.14.0",
    "jsforce": "^2.0.0-beta.6",
    "json5": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "pegjs": "^0.11.0-master.b7b87ea",
    "power-assert": "^1.6.1",
    "prettier": "^3.4.2",
    "rimraf": "^3.0.2",
    "salesforce-metadata-xml-builder": "^0.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
