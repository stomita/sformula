{
  "name": "sformula",
  "description": "Library for parsing / evaluating Salesforce formula in client-side JavaScript",
  "version": "1.0.4",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stomita/sformula"
  },
  "scripts": {
    "clean": "rimraf dist/* lib/*",
    "prepare": "npm run build",
    "build": "npm-run-all build:lib build:parser build:web",
    "build:parser": "pegjs -o lib/parser.js src/parser.pegjs",
    "build:lib": "babel --extensions '.ts' -d lib src",
    "build:web": "webpack lib/index.js dist/sformula.js --output-library sformula",
    "typecheck": "tsc --noEmit",
    "test": "ava",
    "test:skipRebuild": "SKIP_REBUILD_FORMULA_SCHEMA=true ava",
    "test:skipPrepare": "SKIP_LOADING_TEST_RECORDS=true ava"
  },
  "keywords": [
    "salesforce",
    "formula",
    "javascript",
    "parser",
    "eval"
  ],
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "dependencies": {
    "esformula": "^2.0.1",
    "luxon": "~1.18.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/luxon": "^1.24.0",
    "@types/node": "^14.0.12",
    "adm-zip": "^0.4.7",
    "ava": "^0.24.0",
    "fs-extra": "^5.0.0",
    "js-yaml": "^3.11.0",
    "jsforce": "^1.8.4",
    "json5": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "pegjs": "^0.10.0",
    "rimraf": "^3.0.2",
    "salesforce-metadata-xml-builder": "^0.4.0",
    "typescript": "^3.9.5",
    "webpack": "^3.10.0"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ],
    "concurrency": 1,
    "verbose": true,
    "files": [
      "test/**/*.test.js"
    ]
  }
}
