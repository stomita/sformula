{
  "name": "sformula",
  "description": "Salesforce formula parsing / executing in client side",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm-run-all build:lib build:parser build:flow build:web",
    "build:parser": "pegjs -o lib/parser.js src/parser.pegjs",
    "build:lib": "babel -d lib src",
    "build:flow": "flow-copy-source src lib",
    "build:web": "webpack lib/index.js dist/sformula.js --output-library sformula",
    "test": "ava",
    "test:skipRebuild": "SKIP_REBUILD_FORMULA_SCHEMA=true ava"
  },
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "esformula": "^1.0.6",
    "moment": "^2.22.1"
  },
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.3.0",
    "fs-extra": "^5.0.0",
    "js-yaml": "^3.11.0",
    "json5": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "pegjs": "^0.10.0",
    "salesforce-metadata-xml-builder": "^0.4.0",
    "webpack": "^3.10.0"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ],
    "files": [
      "test/**/*.test.js"
    ]
  }
}
